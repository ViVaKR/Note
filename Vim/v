" 오리지널 vi 와의 호환성을 없애고
" Vim 만의 기능을 사용함. 한글모드
set nocompatible
set ai
filetype off
set nobomb

" Turn on syntax highlighting
syntax on

filetype plugin on
filetype indent on

" Security
set modelines=0

" Show line numbers
set number

" Show file stata
set ruler

" Blink cursor on error instead of beeping (grr)
set visualbell

" Encoding
set enc=utf-8
set encoding=utf-8
set termencoding=utf-8
set fileencoding=utf-8
set noexpandtab
set autoindent

" Whitespace
set nowrap
set textwidth=119
set tabstop=4
set shiftwidth=4
set softtabstop=4
set noshiftround

" Searching
set hlsearch
set incsearch
set ignorecase
set smartcase
set showmatch
let mapleader = "\\"
nnoremap <leader><leader> ``
nnoremap <space> :
nnoremap o o<esc>
nnoremap O O<esc>
nnoremap n nzz
nnoremap N Nzz
nnoremap Y y$
nnoremap / /\v
vnoremap / /\v

test demo (fine thanks and you) Hello, World
hi <nice to meetl to you>hi
test demo (fine thanks and you) Hello, World
hi <nice to meetl to you>hi
test demo (fine thanks and you) Hello, World
hi <nice to meetl to you>hi
" To Normal Mode
inoremap jj <esc>
{
	" Cursor motion
		set scrolloff=3
		set backspace=indent,eol,start
		set matchpairs+=<:> "  use % to jump between pairs
}
" Rendering
set ttyfast

" Status bar
" Clear status line when vimrc is reloaded.
set statusline=

" Status line left side.
set statusline+=\ %F\ %M\ %Y\ %R

set laststatus=2
"
" Last line
set showmode
set showcmd
set showmatch
set wildmenu
set wildmode=list:longest
set wildignore=*.docx,*.jgp,*.png,*.gif,*.pdf,*.pyc,*.exe,*.flv,*.img,*.xlsx
set cursorline
set cursorcolumn
set cindent
set smartindent
set copyindent
set history=1000

let skip_defaults_vim=1

if exists('+termguicolors')
let &t_8f = "\<Esc>[38;2;%lu;%lu;%lum"
let &t_8b = "\<Esc>[48;2;%lu;%lu;%lum"
set termguicolors
endif

set nobackup

let &t_SI = "\e[5 q"
let &t_EI = "\e[1 q"

set background=dark
let g:everforest_background = 'soft'
let g:everforest_better_performance = 1
colorscheme everforest

map <C-o> :NERDTreeToggle<CR>

if !has('gui_running')
set t_Co=256
endif

so ~/.vim/plugins.vim

let g:lightline = {
	\ 'colorscheme': 'wombat',
	\ }



